import random

def jogo_adivinhacao():
    print("ğŸ¯ Bem-vindo ao jogo de adivinhaÃ§Ã£o!")
    print("Estou pensando em um nÃºmero entre 1 e 100...")
    print("VocÃª tem 10 tentativas para acertar!")

    numero_secreto = random.randint(1, 100)
    tentativas = 0
    max_tentativas = 10

    while tentativas < max_tentativas:
        try:
            palpite = int(input(f"Tentativa {tentativas + 1}/{max_tentativas} - Digite seu palpite: "))
        except ValueError:
            print(" Por favor, digite um nÃºmero vÃ¡lido.")
            continue

        tentativas += 1

        if palpite < numero_secreto:
            print("ğŸ”¼ Muito baixo! Tente um nÃºmero maior.")
        elif palpite > numero_secreto:
            print("ğŸ”½ Muito alto! Tente um nÃºmero menor.")
        else:
            print(f"ğŸ‰ ParabÃ©ns! VocÃª acertou o nÃºmero {numero_secreto} em {tentativas} tentativas!")
            break
    else:
        # Esse "else" pertence ao while â€” executa se o jogador nÃ£o acertar a tempo
        print(f"ğŸ˜¢ Suas {max_tentativas} tentativas acabaram! O nÃºmero era {numero_secreto}.")

if __name__ == "__main__":
    jogo_adivinhacao()
